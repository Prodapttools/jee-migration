
<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="itemLookupBean" class="com.example.ItemLookupBean" scope="singleton">
        <property name="transactionTimeout" value="180"/>
        <property name="jndiName" value="ejb/ItemLookupBean"/>
        <property name="runAsPrincipal" value="Admin"/>
    </bean>

    <bean id="productCatalogBean" class="com.example.ProductCatalogBean" scope="singleton">
        <property name="transactionTimeout" value="180"/>
        <property name="jndiName" value="ejb/ProductCatalogBean"/>
        <property name="runAsPrincipal" value="Admin"/>
    </bean>

    <bean id="logEventSubscriber" class="com.example.LogEventSubscriber" scope="singleton">
        <property name="destinationJndiName" value="jms/LogEventQueue"/>
        <property name="runAsPrincipal" value="admin_user"/>
    </bean>

    <security:role-assignment>
        <security:role name="acme_user">
            <security:principal name="AnvilUser"/>
            <security:principal name="Admin"/>
        </security:role>
    </security:role-assignment>

    <bean id="idempotentMethods" class="com.example.IdempotentMethods">
        <property name="methods">
            <list>
                <bean class="com.example.IdempotentMethod">
                    <property name="ejbName" value="ItemLookupBean"/>
                    <property name="methodName" value="lookupItem"/>
                    <property name="methodParams">
                        <list>
                            <value>java.lang.Long</value>
                        </list>
                    </property>
                </bean>
                <bean class="com.example.IdempotentMethod">
                    <property name="ejbName" value="ProductCatalogBean"/>
                    <property name="methodName" value="populateCatalog"/>
                </bean>
            </list>
        </property>
    </bean>
</beans>
