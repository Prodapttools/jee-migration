
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="itemLookupBean" class="com.acme.anvil.service.ItemLookupBean" scope="singleton">
        <property name="transactionManager" ref="transactionManager"/>
    </bean>

    <bean id="productCatalogBean" class="com.acme.anvil.service.ProductCatalogBean" scope="singleton">
        <property name="transactionManager" ref="transactionManager"/>
        <property name="storeCode" value="123"/>
    </bean>

    <bean id="logEventSubscriber" class="com.acme.anvil.service.jms.LogEventSubscriber" scope="singleton">
        <property name="transactionManager" ref="transactionManager"/>
        <property name="destinationType" value="javax.jms.Topic"/>
    </bean>

    <security:global-method-security secured-annotations="enabled"/>
    
    <security:intercept-url pattern="/**" access="ROLE_acme_user"/>
    
    <security:authentication-manager>
        <security:authentication-provider>
            <security:user-service>
                <security:user name="acme_user" password="{noop}password" authorities="ROLE_acme_user"/>
            </security:user-service>
        </security:authentication-provider>
    </security:authentication-manager>

</beans>
